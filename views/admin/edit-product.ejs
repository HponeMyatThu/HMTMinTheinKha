<%- include('../includes/head.ejs') %>
<!-- import the head html -->
<body>
  <%- include('../includes/navigation.ejs')%>
  <!-- import the navigation -->
  <main>
    <form action="/admin/<%if(editing){%>edit-product<%}else{%>edit-product<%}%>" method="POST">
      <div class="container">
        <div class="mb-3 mx-auto">
          <label for="Addproduct" class="form-label">Add product</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value="<% if(editing){%> <%= product.title %> <%}%>"
            aria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3 mx-auto">
          <label for="imageUrl" class="form-label">Image Url</label>
          <input
            type="text"
            class="form-control"
            id="imageUrl"
            name="imageUrl"
            value="<% if(editing){%> <%= product.imageUrl %> <%}%>"
            aria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3 mx-auto">
            <label for="description" class="form-label">Description</label>
            <textarea
              type="text"
              class="form-control"
              id="description"
              name="description"
              aria-describedby="emailHelp"
            >
            <% if(editing){%> <%= product.description %> <%}%>
          </textarea>
            
          </div>
          <div class="mb-3 mx-auto">
            <label for="price" class="form-label">Price</label>
            <input
              type="text"
              class="form-control"
              id="price"
              name="price"
              value="<% if(editing){%> <%= product.price%> <%}%>"
              aria-describedby="emailHelp"
              row="5"
            />
          </div>
      </div>

        <% if(editing){%>
          <input type="hidden" type="text" value="<%=product.id %>" name="productId" />
        <%}%>
        <button type="submit" class="btn btn-primary">
          <% if(editing) {%>
            Edit
          <% } else { %>
            Add
          <% } %>
        </button>
      
    </form>
  </main>

  <%- include('../includes/end.ejs') %>
  <!-- import the end html -->

